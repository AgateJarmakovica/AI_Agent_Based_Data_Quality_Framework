# =====================================================================
# Environment Configuration for healthdq-ai
# ---------------------------------------------------------------------
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
# =====================================================================

# --- LLM API Keys -----------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# --- LLM Configuration ------------------------------------------------
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic, huggingface
DEFAULT_MODEL=gpt-4  # e.g., gpt-4, claude-3-opus, etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# --- Vector Database --------------------------------------------------
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=healthdq_memory

# --- Database ---------------------------------------------------------
DATABASE_URL=sqlite:///./healthdq.db
# For PostgreSQL: postgresql://user:password@localhost:5432/healthdq
# For MySQL: mysql://user:password@localhost:3306/healthdq

# --- API Configuration ------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_DEBUG=true

# --- Streamlit UI -----------------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# --- Agent Configuration ----------------------------------------------
ENABLE_AGENT_MEMORY=true
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300

# --- HITL Configuration -----------------------------------------------
ENABLE_HITL=true
HITL_AUTO_APPROVE_THRESHOLD=0.95
HITL_REQUIRE_FEEDBACK=true

# --- Logging ----------------------------------------------------------
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/healthdq.log
LOG_FORMAT=json  # Options: json, text

# --- Data Processing --------------------------------------------------
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=csv,json,xlsx,parquet
ENABLE_ASYNC_PROCESSING=true

# --- FAIR Reproducibility ---------------------------------------------
ENABLE_VERSIONING=true
ENABLE_METADATA_TRACKING=true
METADATA_PATH=./data/metadata

# --- Security ---------------------------------------------------------
SECRET_KEY=your_secret_key_here_change_this_in_production
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000

# --- FHIR Configuration -----------------------------------------------
FHIR_BASE_URL=https://hapi.fhir.org/baseR4
FHIR_AUTH_TOKEN=

# --- Redis Cache (Optional) -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
ENABLE_REDIS_CACHE=false

# --- Monitoring (Optional) --------------------------------------------
ENABLE_TELEMETRY=false
SENTRY_DSN=

# --- Development ------------------------------------------------------
DEV_MODE=true
RELOAD_ON_CHANGE=true
